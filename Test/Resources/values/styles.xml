<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>


	
	<style name="AppTheme.Text" parent="@style/TextAppearance.MaterialComponents.Body1">
		<item name="android:textColor">@color/textColor</item>
	</style>


	<style name="AppTheme.Text.HeadLine1">
		<item name="android:textSize">25sp</item>
	</style>

	<style name="AppTheme.Text.HeadLine2">
		<item name="android:textSize">23sp</item>
	</style>

	<style name="AppTheme.Text.HeadLine3">
		<item name="android:textSize">20sp</item>
	</style>
	<style name="AppTheme.Text.Body1">
		<item name="android:textSize">18sp</item>
	</style>
	<style name="AppTheme.Text.Body3">
		<item name="android:textSize">16sp</item>
	</style>

	<style name="AppTheme.Text.Secondary1">
		<item name="android:textColorSecondary">@color/colorTextSecondary</item>
		<item name="android:textColor">@color/colorTextSecondary</item>
	</style>
</resources>
