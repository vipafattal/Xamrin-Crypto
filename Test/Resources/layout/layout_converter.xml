<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:strokeWidth="3dp"
    app:cardCornerRadius="30dp"
    android:clipChildren="true"
    app:cardElevation="0dp"
    android:elevation="0dp"
    app:strokeColor="@color/colorItemSecondary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingVertical="8dp"
            android:paddingLeft="24dp"
            android:paddingStart="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/converter_logo"
                android:layout_marginRight="12dp"
                tools:src="@tools:sample/avatars"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/converter_crypto_symbole_name"
                    style="@style/AppTheme.Text.Secondary1"
                    tools:text="BTC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/converter_crypto_name"
                    style="@style/AppTheme.Text.Body1"
                    tools:text="BitCoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/converter_crypto_input_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="170dp"
                app:boxStrokeWidth="1.5dp"
                app:boxBackgroundMode="none"
                android:layout_height="65dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:paddingLeft="20dp"
                    android:background="@null"

                    android:layout_width="match_parent"
                    tools:text="15000"
                    android:maxLines="1"
                    android:inputType="numberDecimal"
                    android:layout_height="match_parent"/>

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:paddingVertical="8dp"
            android:paddingLeft="24dp"
            android:paddingStart="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="#E8F5E9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="32dp"
                app:cardElevation="0dp"
                android:layout_marginRight="12dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#43A047"
                android:layout_height="32dp">
                <TextView
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    style="@style/AppTheme.Text.Body1"
                    android:layout_width="wrap_content"
                    android:text="$"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/AppTheme.Text.Secondary1"
                    android:text="USD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    style="@style/AppTheme.Text.Body1"
                    android:text="US Dollar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/converter_money_input_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="170dp"
                app:boxStrokeWidth="1.5dp"
                app:boxBackgroundMode="none"
                android:layout_height="65dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:drawableStart="@drawable/ic_dollar"
                    android:paddingLeft="0dp"
                    android:background="@null"

                    android:layout_width="match_parent"
                    tools:text="15000"
                    android:maxLines="1"
                    android:inputType="numberDecimal"
                    android:layout_height="match_parent"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
