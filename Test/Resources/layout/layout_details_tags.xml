<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="9dp"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="#546E7A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#fff"
            android:layout_gravity="center"
            android:paddingVertical="6dp"
            android:paddingHorizontal="9dp"
            android:textSize="14sp"
            android:textStyle="bold"
            style="@style/AppTheme.Text.Body3"
            tools:text="Rank #1"
            android:id="@+id/details_rank_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    </androidx.cardview.widget.CardView>
    <Space
        android:layout_width="12dp"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/colorItemSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorTextSecondary"
            android:layout_gravity="center"
            android:paddingVertical="6dp"
            android:paddingHorizontal="9dp"
            android:textSize="14sp"
            style="@style/AppTheme.Text.Body3"
            tools:text="coin"
            android:id="@+id/details_category_currency_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    </androidx.cardview.widget.CardView>
    <Space
        android:layout_width="12dp"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/colorItemSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorTextSecondary"
            android:layout_gravity="center"
            android:paddingVertical="6dp"
            android:paddingHorizontal="9dp"
            android:textSize="14sp"
            style="@style/AppTheme.Text.Body3"
            android:text="Last Updated on: "
            android:id="@+id/details_last_updated_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    </androidx.cardview.widget.CardView>
</LinearLayout>
